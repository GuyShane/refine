extends layout

block content
  .content
    h1.page-heading Our work
    .container-fluid
      .row
        each src in thumbs
          .col-xs-6.col-sm-4.col-md-3.col-lg-2.img-centered
            img.thumb(src=src, height='126', width='126', data-toggle='modal', data-target='#image-modal')
  #image-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal')
            span &times;
        .modal-body
          img#modal-image
        .modal-footer
          img#prev-img(src='images/arrow-left.png')
          img#next-img(src='images/arrow-right.png')
          a#a-new-tab(target='_blank')
            img#img-new-tab(src='images/new_tab.png', title='View picture in new tab')
  img#load-next.hidden-img
  img#load-prev.hidden-img
