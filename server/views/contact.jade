extends layout

block content
  .content
    form#contact-form
      .row
        .col-xs-12.col-md-1
          label.required(for='contact-name') Name:
        .col-xs-12.col-md-5.contact-input
          input#contact-name.form-control(type='text', placeholder='Name')
        .col-xs-12.col-md-1
          label.required(for='contact-email') Email:
        .col-xs-12.col-md-5.contact-input
          input#contact-email.form-control(type='email', placeholder='Email')
      .row
        .col-xs-12.col-md-6.contact-input
          input.form-control(type='tel', placeholder='Phone')
        .col-xs-12.col-md-6.contact-input
          input.form-control(type='tel', placeholder='Fax')
      .row
        .col-xs-12.col-md-6.contact-input
          input.form-control(type='text', placeholder='Address')
        .col-xs-12.col-md-6.contact-input
          input.form-control(type='text', placeholder='Postal code')
      .row
        .col-xs-12.col-md-6.contact-input
          input.form-control(type='text', placeholder='City')
        .col-xs-12.col-md-6.contact-input
          input.form-control(type='text', placeholder='Province')
      .row
        .col-xs-12.contact-input
          textarea.form-control(placeholder='Message', rows='5')
      button.btn.btn-primary.btn-lg(type='submit') Send